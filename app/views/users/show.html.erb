<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>
   <% if current_user_admin? %>
  <div class="actions">
   <% if current_user?(@user) %>
  <%= link_to "Edit Account", edit_user_path(@user), class: "button edit" %>
   <% end %>
   <% if current_user_admin? %>
  <%= link_to 'Delete Account', @user, method: :delete,
              data: { confirm: "Permanently delete your account!?" },
              class: "button delete" %> 
              <% end %>
</div>
<% end %>
<% if @registration.present? %>
    <h3>Registrations</h3>
    <% @registrations.each do |r| %>
      <div class="registration">
        
         <span class="image">
            <%= link_to image(r.event.image_file_name), r.event %>
          </span>
          <span class="name">
            <%= link_to r.event.name, r.event %>
          </span>

          <span class="date">
            <%= time_ago_in_words(r.created_at) %> ago
          </span>
         
        </div>
      
    <% end %>
  <% end %>
</section>